<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cecyt9.memorynow.MainActivity"
    android:background="@drawable/memory">


    <Button
        android:id="@+id/btnEntrarEscuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtContraEscuela"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtContraEscuela"
        android:layout_marginBottom="75dp"
        android:elevation="5dp"
        android:onClick="entra"
        android:text="Entrar"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <EditText
        android:id="@+id/txtContraEscuela"
        style="@android:style/Widget.Holo.Light.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:layout_alignTop="@+id/txtEscuela"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txtEscuela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:text="Ingresa la contraseÃ±a \n de tu Escuela"
        android:layout_above="@+id/btnEntrarEscuela"
        android:layout_alignLeft="@+id/txtContraEscuela"
        android:layout_alignStart="@+id/txtContraEscuela"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />


</RelativeLayout>
