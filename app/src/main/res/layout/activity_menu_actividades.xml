<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inicio_sesion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cecyt9.memorynow.InicioGrupo"
    android:background="@drawable/tab">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Menú Actividades"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tangram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="80dp"
        android:text="Tangram"
        android:onClick="verTangram"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lectura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="127dp"
        android:text="Comprensión Lectora"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:onClick="verLectura"
        android:layout_below="@+id/tangram"
        android:layout_alignLeft="@+id/tangram"
        android:layout_alignStart="@+id/tangram" />

    <TextView
        android:id="@+id/rompe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:text="RompeCabezas"
        android:onClick="verRompecabezas"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignBaseline="@+id/tangram"
        android:layout_alignBottom="@+id/tangram"
        android:layout_toRightOf="@+id/lectura"
        android:layout_toEndOf="@+id/lectura" />

    <TextView
        android:id="@+id/columnas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lectura"
        android:layout_alignLeft="@+id/rompe"
        android:layout_alignStart="@+id/rompe"
        android:text="Relaciona Columnas"
        android:onClick="verColumnas"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

</RelativeLayout>
